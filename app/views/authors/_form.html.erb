<%= form_for @author do |f| %>

  <% if @author.errors.any? %>
    <%= render 'shared/form_errors', form: @author %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-success' %>
  </div>
<% end %>