<%= form_for @author do |f| %>

  <% if @author.errors.any? %>
    <div id="error_explanation">
      <p id="labelErrors">Ops!</p>
      <ul>
        <% @author.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>