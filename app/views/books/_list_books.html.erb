<table class="table table-bordered table-hover">
  <thead>
    <tr class="bg-livros">
      <th colspan='5'><%= t('.todos') %></th>
    </tr>
    <tr class="bg-livros">
      <th><%= t('.nome') %></th>
      <th><%= t('.autor') %></th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @all_books.any? %>
      <% @all_books.each do |b| %>
        <tr>
          <td><%= link_to(b.name, b.link, target: '_blank') %></td>
          <td><%= b.author.name %></td>
          <td><%= traduz_resultado(b.wishlist, 'wishlist') %></td>
          <td><%= traduz_resultado(b.read, 'read') %></td>
          <td><%= link_to(t('.editar'), edit_book_path(b), class: 'btn btn-warning btn-sm') %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td class="text-center" colspan="6"><%= t('.vazio') %></td>
      </tr>
    <% end %>
  </tbody>
</table>