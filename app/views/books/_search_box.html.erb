<div class="searchBox">
  <%= form_tag books_search_path, method: :get do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], id: 'searchField', class: 'form-control', placeholder: t('.placeholder') %>
      <%= submit_tag t('.buscar'), :name => nil, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>