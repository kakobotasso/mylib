<div id="boxLogin" class="center-block">
  <%= form_tag login_path do %>
    <% if flash[:notice] %>
      <div id="errorNotice">
        <p class="bg-danger"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <ul>
      <li>
        <%= text_field_tag :login, "", class: 'form-control', placeholder: 'Login' %>
      </li>

      <li>
        <%= password_field_tag :password, "", class: 'form-control', placeholder: 'Password' %>
      </li>

      <li id='btLogin'><%= submit_tag(t('.login'), class: 'btn btn-primary') %></li>
    </ul>
  <% end %>
</div>